<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <properties resource="config.properties"/>
    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="${driver}"/>
                <property name="url" value="${url}"/>
                <property name="username" value="${username}"/>
                <property name="password" value="${password}"/>
            </dataSource>
        </environment>
    </environments>
    <mappers>
        <mapper resource="mapper/AdditionalServiceMapper.xml"/>
        <mapper resource="mapper/CarMapper.xml"/>
        <mapper resource="mapper/CarSaleMapper.xml"/>
        <mapper resource="mapper/CarTypeMapper.xml"/>
        <mapper resource="mapper/CustomerMapper.xml"/>
        <mapper resource="mapper/EmployeeMapper.xml"/>
        <mapper resource="mapper/ManufacturerMapper.xml"/>
        <mapper resource="mapper/OrderMapper.xml"/>
        <mapper resource="mapper/OrderHasAdditionalServiceMapper.xml"/>
        <mapper resource="mapper/PositionMapper.xml"/>
        <mapper resource="mapper/ServiceTypeMapper.xml"/>
        <mapper resource="mapper/TestDriveMapper.xml"/>
    </mappers>
</configuration>
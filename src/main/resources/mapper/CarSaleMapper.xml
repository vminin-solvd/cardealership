<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.solvd.jdbc.dao.CarSaleDAO">

    <insert id="saveEntity" keyColumn="id" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO car_sales(id, customer_id, employee_id, car_id)
        VALUES (#{id}, #{customer.id}, #{employee.id}, #{car.id})
    </insert>

    <sql id="select">
        SELECT * FROM car_sales
    </sql>

    <select id="getEntityById">
        <include refid="select"/>
        WHERE id = #{id}
    </select>

    <select id="getCarSaleByEmployeeId">
        <include refid="select"/>
        WHERE employee_id = #{employee.id}
    </select>

    <select id="getAll">
        <include refid="select"/>
    </select>

    <update id="updateEntity">
        UPDATE car_sales
        SET customer_id = customer.id, employee_id = employee.id, car_id = car.id
        WHERE id = #{id}
    </update>

    <delete id="removeEntityById">
        DELETE FROM car_sales
        WHERE id = #{id}
    </delete>

    <resultMap id="CarSaleResultMap" type="com.solvd.models.CarSale" autoMapping="false">
        <id column="id" property="id"/>
        <result column="customer_id" property="FIXME"/>
        <result column="employee_id" property="FIXME"/>
        <result column="car_id" property="FIXME"/>
    </resultMap>

</mapper>